.head {
    text-align: center;
    margin-top: 20rpx;
}

.body {
    display: flex;
    margin-top: 20rpx;
    flex-wrap: wrap;
    justify-content: space-around
}

.picture-wrap {
    display: flex;
    margin-bottom: 20rpx;
    flex-direction: column;
}

.picture {
    width: 300rpx;
    height: 300rpx;
    border: 4px solid rgb(207, 207, 169);
    padding: 3px;
    background: #fff;
    margin-bottom: 20px;
    position: relative;
}

.info {
    font-family:"FZShuTi",Georgia,Serif;
    font-size:17px;
    text-align: center;
}

.cover {
    position: relative;
    display: flex;
}

.cover:after {
    position: absolute;
    content: '';
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    box-shadow: 0 0 40px 10px #ffffff inset;
}

.decoration {
    width: 40px;
    height: 40px;
    bottom:3px;
    opacity: 0.8;
    display: block;
    position: absolute;
}